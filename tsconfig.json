{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "declaration": false
  },
  "include": [
    "src/**/*.ts"
  ]
}
